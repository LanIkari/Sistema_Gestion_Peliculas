<div class="container-fluid">
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <div class="container-flex-end">
                <button class="btn btn-success">
                    <a href="addform" class="a-btn">Agregar
                        <i class="bi bi-plus-lg"></i>
                    </a>
                </button>
            </div>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Año de Estreno</th>
                    <th scope="col">Genero</th>
                    <th scope="col">Duración</th>
                    <th scope="col">Sinopsis</th>
                    <th scope="col">Director</th>
                    <th scope="col">Reparto</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Eliminar</th>
                </tr>
                </thead>
                <tbody>
                {{#each result}}
                    <tr>
                        <th scope="row" style="vertical-align: middle">{{this._id}}</th>
                        <td>{{this.titulo}}</td>
                        <td>{{this.anno}}</td>
                        <td>{{this.genero}}</td>
                        <td>{{this.duracion}}</td>
                        <td class="text-justify">{{this.sinopsis}}</td>
                        <td>{{this.director}}</td>
                        <td>{{this.reparto}}</td>
                        <td>
                            <form action="" method="GET">
                                <button type="button" class="btn btn-warning">
                                    <a href="/updateform/{{this._id}}" class="a-btn">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                </button>
                            </form>
                        </td>
                        <td>
                            <form action="/apiview/{{_id}}?_method=DELETE" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger" name="id" value="{{this._id}}">
                                    <i class="bi bi-trash3-fill"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-lg-1"></div>
    </div>
</div>
